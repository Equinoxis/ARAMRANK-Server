<!DOCTYPE html>
<html lang="en">
<head>
<%- include('./partials/head'); %>
</head>
<body>

<%- include('./partials/myNavbar'); %>
<div class="container">
  <div class="jumbotron justify-content-center">
    <div class="container text-center">
      <h1>ALL RANDOM ALL RANK!</h1>
      <script type="text/javascript">
        function search() {
          let name = document.getElementById('name').value;
          if(name == "")
            return;

          let lang = "<%= locale %>";
          if(lang == 'en') 
            window.location.href = '/player/'+name;
          else
            window.location.href = '/'+lang+'/player/'+name;
        }
      </script>

      <p><%= __('enter_sumName') %><input type="text" placeholder="<%= __('pseudo') %>" id="name"><button style="color:black" id="indexGo" onclick="search()">GO</button></p>
          <script type="text/javascript">
        var indexInput = document.getElementById("name");
        indexInput.addEventListener("keyup", function(event) {
        if (event.keyCode === 13) {
         event.preventDefault();
         document.getElementById("indexGo").click();
        }
      });</script>
    </div>
  </div>
</div>


<%- include('./partials/myFooter'); %>

</body>
</html>